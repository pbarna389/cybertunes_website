{
	"name": "cybertunes_website",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"eslint": "eslint .",
		"stylelint": "stylelint '**/*.{css,scss,sass,less}'",
		"fix:eslint": "eslint . --fix",
		"fix:stylelint": "stylelint '**/*.{css,scss,sass,less}' --fix",
		"prepare": "husky"
	},
	"lint-staged": {
		"**/*.{js,ts,jsx,tsx}": [
			"npm run fix:eslint",
			"npm run eslint"
		],
		"**/*.{css,scss}": [
			"npm run fix:stylelint",
			"npm run stylelint"
		]
	},
	"dependencies": {
		"next": "15.5.4",
		"react": "19.1.0",
		"react-dom": "19.1.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "15.5.4",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-unicorn": "^61.0.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.0",
		"stylelint": "^16.24.0",
		"stylelint-config-standard": "^39.0.0",
		"stylelint-prettier": "^5.0.3",
		"stylelint-scss": "^6.12.1",
		"typescript": "^5",
		"typescript-eslint": "^8.24.1"
	}
}
